<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Header/Title Bar -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/messengerlogo"
            android:layout_marginTop="25dp"
            android:layout_marginRight="0dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:src="@drawable/messengerlogo" />

        <TextView
        android:id="@+id/chatHeaderTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:padding="5dp"
        android:text="Messenger"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textColor="#333333"/>
    </LinearLayout>

    <!-- Message Display Area
         - layout_height="0dp" and layout_weight="1" ensures this area fills all remaining vertical space.
         - ListView is used to efficiently display a list of messages. -->
    <ListView
        android:id="@+id/messageListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:stackFromBottom="true"
        android:transcriptMode="alwaysScroll"
        android:background="#FFFFFF"/>

    <!-- Message Input and Send Button Area (Fixed at the bottom) -->
    <LinearLayout
        android:id="@+id/inputArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#F0F0F0"
        android:gravity="center_vertical"
        android:elevation="4dp">

        <!-- Input Field (Takes up most of the horizontal space with layout_weight="1") -->
        <EditText
            android:id="@+id/messageInputET"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Type your message..."
            android:inputType="textCapSentences|textMultiLine"
            android:maxLines="4"
            android:padding="12dp"
            android:textSize="16sp"
            android:background="#FFFFFF"
            android:layout_marginEnd="8dp"/>

        <!-- Send Button -->
        <Button
            android:id="@+id/sendBtn"
            android:text="SEND"
            android:backgroundTint="#1E88E5"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="48dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"/>
    </LinearLayout>

</LinearLayout>
